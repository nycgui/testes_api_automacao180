pipeline {
    agent {
        docker{
            image 'ruby'
            args '--network rocklov-network'
        }
    }

    stages {
        stage('Hooks') {
            steps {
                sh 'cd api && bundle install'
            }
        }
        stage('Executando rspec') {
            steps {
                sh 'cd api && rspec'
            }
        }
    }
}
